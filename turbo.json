{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/tsconfig*.json"],
  "globalPassThroughEnv": ["AWS_SECRET_KEY", "GITHUB_TOKEN"],
  "tasks": {
    "codegen": {
      "cache": true,
      "outputs": ["src/generated/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {},
    "test-unit": {},
    "lint": {
      "env": ["TIMING"]
    },
    "lint-styles": {},
    "typecheck": {},
    "build-storybook": {},
    "clean": {
      "cache": false
    },
    "check-dist": {
      "dependsOn": ["build"]
    },
    "check-size": {
      "dependsOn": ["build"]
    }
  }
}
