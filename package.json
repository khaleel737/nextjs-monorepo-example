{
  "name": "nextjs-monorepo-example",
  "private": true,
  "keywords": [
    "eslint-plugin",
    "example",
    "monorepo",
    "nextjs",
    "playwright",
    "prisma",
    "remix",
    "storybook",
    "vite",
    "workspace"
  ],
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "license": "MIT",
  "homepage": "https://github.com/belgattitude/nextjs-monorepo-example",
  "repository": "belgattitude/nextjs-monorepo-example",
  "scripts": {
    "dev:all": "pnpm --filter \"./apps/**\" --parallel run dev",
    "dev:profile": "pnpm --filter \"profile\" run dev",
    "dev:messages": "pnpm --filter \"messages\" run dev",
    "dev:feed": "pnpm --filter \"feed\" run dev",
    "dev:investments": "pnpm --filter \"investments\" run dev",
    "dev:dashboard": "pnpm --filter \"dashboard\" run dev",
    "check:git-pristine": "./scripts/check-git-pristine.sh",
    "deps:check": "pnpm npm-check-updates --configFileName .ncurc.yml --workspaces --root --mergeConfig",
    "deps:update": "pnpm npm-check-updates --configFileName .ncurc.yml -u --workspaces --root --mergeConfig",
    "g:build": "pnpm turbo run build",
    "build:all": "pnpm --filter \"./apps/**\" run build",
    "start:all": "pnpm --filter \"./apps/**\" --parallel run start",
    "g:changeset": "pnpm changeset",
    "g:check-dist": "pnpm turbo run check-dist",
    "g:clean": "pnpm clean:global-cache && pnpm clean:turbo && pnpm rimraf ./out && pnpm workspaces foreach -A -ptv run clean",
    "g:codegen": "pnpm turbo run codegen",
    "g:fix-all-files": "pnpm turbo run fix-all-files",
    "g:lint": "TIMING=1 pnpm turbo run lint --color",
    "g:lint-staged-files": "pnpm lint-staged --allow-empty",
    "g:lint-styles": "pnpm turbo run lint-styles --color",
    "g:release": "pnpm g:build && pnpm changeset publish",
    "g:test-e2e": "pnpm turbo run test-e2e",
    "g:test-unit": "pnpm turbo run test-unit",
    "g:typecheck": "pnpm turbo run typecheck",
    "g:turbo": "pnpm turbo",
    "install:playwright": "pnpm playwright install",
    "install:husky": "pnpm husky",
    "postinstall": "pnpm run install:husky && pnpm run g:codegen",
    "check:install": "pnpm dlx @yarnpkg/doctor .",
    "clean:global-cache": "npx rimraf ./.cache",
    "clean:turbo": "npx rimraf .turbo && npx rimraf --glob \"**/node_modules/.cache/turbo\"",
    "clean:all": "npx rimraf --glob \"**/node_modules\" && npx rimraf .turbo && npx rimraf .cache",
    "nuke:node_modules": "pnpm rimraf --glob '**/node_modules'"
  },
  "dependencies": {
    "cross-env": "7.0.3"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.11",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/shell-quote": "1.7.5",
    "@your-org/eslint-config-bases": "workspace:^",
    "eslint": "8.57.1",
    "husky": "9.1.7",
    "lint-staged": "15.4.1",
    "npm-run-all2": "7.0.2",
    "prettier": "3.4.2",
    "rimraf": "^5.0.1",
    "shell-quote": "1.8.2",
    "syncpack": "13.0.0",
    "turbo": "2.3.3",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
